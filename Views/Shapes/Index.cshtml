<script>
    function timedRefresh(timeoutPeriod) {
       var timer = setInterval(function() {
           clearInterval(timer);
                window.location.href = window.location.href;
       }, 4000); //refresh every 4s so that when use come back to the website later, the data is updated 
                    //without the need to click on refresh button.
                   
    };
